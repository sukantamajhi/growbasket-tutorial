{{>header}}
<h2>Sell your product</h2>
<div class='error'>
    {{message}}
</div>
<form name="product_sell" action='/sell' method='post' onsubmit="return check()" class="entry" >

    <div class='username'>
        <label for='username'>Username</label> <br>
        {{#if uname}}
        <input type='text' name="username" id="username" class="username" value="{{uname}}" disabled/>
        {{/if}}
    </div>

    <div class='imgsrc'>
        <label for='imgsrc'>Image Source</label> <br>
        <input type='text' class="imgsrc" name="imgsrc" id="imgsrc" placeholder="Enter image source" required />
    </div>

    <div class='pname'>
        <label for='product__name'>Product Name</label> <br>
        <input type='text' class="product__name" name="product__name" placeholder="Enter product name" id="product__name" required />
    </div>

    <div class='price'>
        <label for='price'>Price</label> <br>
        <input type='text' class="price" name="price" placeholder="Enter product price" id="price" required />
        <div id='price__error'></div>
    </div>

    <div class='red_link'>
        <label for='redirect__link'>Redirect Link</label> <br>
        <input type='url' class="redirect__link" placeholder="Enter actual product's url" name="redirect__link" id="redirect__link" required />
    </div>

    <button type='submit'>Submit</button>

</form>

<script>
    function check()
    {
        let x = document.getElementById( "price" ).value;
        if ( isNaN( x ) ) {
            return false;
            text = "Price should be a number";
        }
        document.getElementById( "error" ).innerHTML = text;
    }
</script>
{{>footer}}
