{{>header}}
<div class="section">
    <h2>Login Here</h2>
    <form action="/users/login" method="POST" class="form-label form-css-label">
        <fieldset>
            <input id="username" name="username" type="text" autocomplete="off" required />
            <label for="username">Username</label>
        </fieldset>
        <fieldset>
            <input id="password" name="password" type="password" autocomplete="on" required />
            <label for="password">Password</label>
        </fieldset>
        <fieldset>
            <button id="login" type="submit" onclick="goBack()">SUBMIT</button>
        </fieldset>
    </form>
    <a href='/users/signup'>Don't have an account? Click Here</a>

</div>

    {{#if message}}
        <div class='error'>
            {{message}}
        </div>
    {{/if}}


{{>footer}}
